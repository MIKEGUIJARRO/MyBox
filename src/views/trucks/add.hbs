<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="card-header">
                    <h3>Add Truck</h3>
                </div>
                    <form action="/trucks/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="plate" placeholder="Plate" autofocus required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="model" placeholder="Model" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="type" placeholder="Type" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="tire_size" placeholder="Tire Size" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>